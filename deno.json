{
    "lint": {
      "include": ["src/", "main.ts"],
      "exclude": ["data/"]
    },
    "fmt": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve",
      "include": ["src/", "main.ts"],
      "exclude": ["data/"]
    },
    "lock": false,
    "nodeModulesDir": true,
    "test": {
      "include": ["tests/"]
    },
    "tasks": {
      "start": "deno run main.ts",
      "dev": "deno run --watch -A main.ts",
      "test": "deno test --allow-read"
    }
  }